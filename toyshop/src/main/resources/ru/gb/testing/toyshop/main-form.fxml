                        </AnchorPane>
                        <AnchorPane prefHeight="160.0" prefWidth="745.0">
                           <children>
                              <TableView fx:id="tablePrize" prefHeight="174.0" prefWidth="745.0">
                                <columns>
                                  <TableColumn prefWidth="75.0" text="Код" />
                                  <TableColumn prefWidth="289.0" text="Наименование" />
                                  <TableColumn prefWidth="105.0" text="Выдана" />
                                </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
